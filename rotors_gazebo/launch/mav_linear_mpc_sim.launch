<launch>
  <arg name="mav_name" default="firefly" />
  <arg name="namespace" default="$(arg mav_name)"/>
  <group ns="$(arg namespace)">
    <node name="mav_linear_mpc" pkg="rotors_gazebo" type="mav_linear_mpc_node" respawn="true" clear_params="true" output="screen">
      <remap from="odometry" to="ground_truth/odometry" />
      <rosparam file="$(find rotors_gazebo)/resources/linear_mpc_$(arg mav_name).yaml" />
      <rosparam file="$(find rotors_gazebo)/resources/disturbance_observer_$(arg mav_name).yaml"/>
      <param name="verbose" value="true" />
      <param name="use_rc_teleop" value="false" />
      <param name="reference_frame" value="world" />
    </node>

    <node name="PID_attitude_controller" pkg="mav_lowlevel_attitude_controller" type="mav_pid_attitude_controller_node" respawn="true" clear_params="true" output="screen">
      <rosparam command="load" file="$(find rotors_gazebo)/resources/PID_attitude_$(arg mav_name).yaml" />
      <remap from="odometry" to="ground_truth/odometry" />
    </node>
  </group>
</launch>
